@model List<FifthAssignment.Core.Application.Models.BeneficiaryModels.BeneficiaryModel>
@{
    ViewData["Title"] = "Beneficiaries";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center mb-4">Beneficiaries</h2>

            <form asp-action="CreateBeneficiary" asp-controller="Beneficiary" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="identifierNumber" class="form-control" required placeholder="Search beneficiaries...">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>
    
     
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Identifier Number</th>
                                <th class="text-center">First Name</th>
                                <th class="text-center">Last Name</th>
                                <th class="text-center">Delete </th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var beneficiary in Model)
                            {
                                <tr>
                                    <td class="text-center">@beneficiary.UserBeneficiaryBankAccount.IdentifierNumber</td>
                                    <td class="text-center">@beneficiary.UserBeneficiary.FirstName</td>
                                    <td class="text-center">@beneficiary.UserBeneficiary.LastName</td>
                                    <td>
                                        <form asp-action="DeleteBeneficiary" asp-controller="Beneficiary" method="post" onsubmit="return confirm('Are you sure you want to delete this beneficiary?');">
                                            <input type="hidden" name="id" value="@beneficiary.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>