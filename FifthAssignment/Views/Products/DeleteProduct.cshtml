
<div>
    <form method="post" asp-controller="Products" asp-action="DeleteProduct">
        @if (ViewBag.id is not null)
        {
            <input type="hidden" name="id" value="@ViewBag.id" />
            <input type="hidden" name="userId" value="@ViewBag.userId" />
            <input type="hidden" name="operation" value="@ViewBag.Operation" />
        }
        <h1>Are you sure you want to delete this product?</h1>
        <button type="submit" class="btn btn-primary float-end p-2">Delete</button>
        <a href="@Url.Action("Index", "Products", new { id = ViewBag.userId })" class="btn btn-outline-warning float-end p-2 mx-2">Go Back</a>
    </form>
</div>